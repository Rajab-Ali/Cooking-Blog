<% if (recipeProduct!= null){ %>
    <h1>Recipe Page</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipeProduct.name %></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- recipeProduct.image%>" class="img-fluid sticky top" style="top: 20px;" alt="<%- recipeProduct.name%>" loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1><%- recipeProduct.name %></h1>
                </div>
                <div class="col-12 mb-4"><i class="bi bi-tag"></i><%- recipeProduct.category%></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Cooking Instructions</h4>
                    <%- recipeProduct.description %>
                </div>

            </div>

            <div class="row pt-4">
                <div class="col-12">
                    <h4>Recipe Ingredients </h4>
                    <ul class="list-group list-group-flush">
                        <%recipeProduct.ingredients.forEach((item,index)=>{%>
                            <li class="list-group-item">
                                <%-item%>
                            </li>
                        <% })%>
                    </ul>

                </div>
            </div>

        </div>


    </div>

<% } else{ %>

    <h2>No Item Found</h2>

<%}%>