<h1 class="pb-4">Category Page</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <% if(typeof categories !== 'undefined' && categories.length>0) {%>
                <li class="breadcrumb-item active" aria-current="page">Categories</li>
                <% } else if(typeof categoriesbyid !== 'undefined' && categoriesbyid.length>0){%>
                    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
                <% }%>
            
        </ol>
    </nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">

<% if(typeof categories !== 'undefined' && categories.length>0) {%>
    <% if(categories!=''){ %>
        <% categories.forEach((category,index)=>{ %>
        <a href="/categories/<%- category.name%>" class="col text-center catogery__link">
            <div class="catogery__img shadow">
                 <img src="/img/<%- category.image%>" alt="<%- category.name %>" loading="lazy">
            </div>
            <div class="pt-1"><%- category.name %></div>
        </a>
    
    <% }) %>
<% } } else if(typeof categoriesbyid !== 'undefined' && categoriesbyid.length>0){%>

<% if(categoriesbyid!=''){ %>
    <% categoriesbyid.forEach((category,index)=>{ %>
    <a href="/recipe/<%- category._id%>" class="col text-center catogery__link">
        <div class="catogery__img catogery__img--large shadow">
             <img src="/img/<%- category.image%>" alt="<%- category.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%- category.name %></div>
    </a>

<% }) %>
<% } }%>
</div>
